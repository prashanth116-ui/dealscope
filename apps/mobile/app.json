{
  "expo": {
    "name": "DealScope",
    "slug": "dealscope",
    "version": "0.1.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "dealscope",
    "userInterfaceStyle": "automatic",
    "splash": {
      "backgroundColor": "#003366"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.dealscope.app"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#003366"
      },
      "package": "com.dealscope.app"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": ["expo-router"]
  }
}
